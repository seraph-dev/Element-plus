{
  "compilerOptions": {
    "module": "ESNext",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "noLib": false,
    "target": "es6",
    "sourceMap": false,
    "lib": [
      "ESNext", "DOM"
    ],
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "outDir": "../../lib/utils"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "packages/**/__tests__/*"
  ]
 }
