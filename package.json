    "throttle-debounce": "2.3.0",
    "through2": "^4.0.2",
    "transliteration": "^2.2.0",
    "ts-loader": "^8.0.3",
    "ts-morph": "^11.0.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.4.2",
    "url-loader": "^4.1.1",
    "vue": "^3.2.0",
    "vue-jest": "5.0.0-alpha.5",
    "vue-loader": "^16.1.2",
    "vue-router": "^4.0.2",
    "vue-tsc": "^0.3.0",
    "webpack": "^4.44.1",
